<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="TextSubTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_subtitle</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>